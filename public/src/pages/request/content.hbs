<!-- assignTourGuideForm.hbs -->
<form id="assignTourGuideForm" action="/assign-tour-guide" method="post">
	<div class="d-flex flex-wrap gap-2 w-100 mb-3">
		<div class="form-group flex-fill">
			<label for="selectedBookings">Selected Bookings:</label>
			<select class="form-control" id="selectedBookings" name="selectedBookings">
				<!-- Bookings will be populated here -->
			</select>
		</div>
		<div class="form-group flex-fill">
			<label for="tourGuide">Assign Tour Guide:</label>
			<select class="form-control" id="tourGuide" name="tourGuide">
				<!-- Tour guides will be populated here -->
			</select>
		</div>
	</div>
	<button type="submit" class="btn btn-primary w-auto">Assign Tour Guide</button>
</form>
