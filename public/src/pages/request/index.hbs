{{assign title='request form'}}

{{! define the block with page-specific scripts }}
{{#partial 'scripts'}}
<script src="./libs/jquery.js" defer="defer"></script>
<script src="./libs/signature_pad.umd.js" defer="defer"></script>
<script src="./libs/jquery.form.js" defer="defer"></script>
<script src="./form.utils.min.js" defer="defer"></script>
<script src="./form.embed.min.js" defer="defer"></script>
<script src="./request.js" defer="defer"></script>
{{/partial}}

{{! define the block with page-specific styles }}
{{#partial 'styles'}}
<link href="./request.scss" rel="stylesheet">
{{/partial}}

{{! define the block content: include the `request/content.hbs` partial }}
{{#partial 'content'}}
{{> request/content}}
{{/partial}}

{{! extends the layout template with blocks defined above }}
{{> layout}}
